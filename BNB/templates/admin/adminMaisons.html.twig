{% extends 'baseAdmin.html.twig' %} {% block title %}maisons{% endblock %} {%
block body %}

{{ parent() }}

<div class="col-10 p-3">
  <h3 class="text-left py-3">Liste des Maisons</h3>
  <table class="table table-bordered table-hover table-sm text-center">
    <thead>
      <tr>
        <th scope="col">N</th>
        <th scope="col">Titre</th>
        <th scope="col">Description</th>
        <th scope="col">Chambres</th>
        <th scope="col">Prix</th>
        <th scope="col">Note</th>
        <th scope="col">Superficie</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
       {% for maison in maisons %}
    
    <tr>
       <td>{{loop.index}}</td>
       <td>{{maison.titre}}</td>
       <td>{{maison.description}}</td>
       <td>{{maison.chambres}}</td>
       <td>{{maison.prix}}</td>
       <td>{{maison.note}}</td>
       <td>{{maison.superficie}}</td>
       <td>
          <a href="{{ path('maison_update', {'id':maison.id}) }}"  class="btn btn-outline-dark pl-2">Modifier</a> 
          <a href="{{ path('maison_delete', {'id':maison.id}) }}" class="btn btn-outline-dark ">Suprimer</a>
       </td>
    </tr>
    {% endfor %}
    </tbody>
  </table>
  <a href="{{path('maison_create')}} " class="btn btn-primary float-right">Ajouter</a>
</div>

{% endblock %}
